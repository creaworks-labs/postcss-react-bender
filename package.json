{
  "name": "postcss-react-bender",
  "version": "0.0.1",
  "description": "PostCSS plugin to process react-bender styling features with scss-like syntax.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "react",
    "react-native",
    "scss",
    "jss",
    "css-in-js"
  ],
  "author": "Ömer Düzyol <omer@duzyol.net>",
  "license": "MIT",
  "repository": "omerduzyol/postcss-react-bender",
  "bugs": {
    "url": "https://github.com/omerduzyol/postcss-react-bender/issues"
  },
  "homepage": "https://github.com/omerduzyol/postcss-react-bender",
  "dependencies": {
    "css-to-react-native": "^2.2.2",
    "lodash": "^4.17.11",
    "postcss": "^6.0.16",
    "postcss-conditionals": "^2.1.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.0",
    "prop-types": "^15.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^22.4.2",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "lint:prettier": "prettier '**/*.js' --list-different",
    "lint:js": "eslint . --cache",
    "lint": "yarn lint:js && yarn lint:prettier",
    "test": "jest && eslint *.js",
    "pretest": "yarn lint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
