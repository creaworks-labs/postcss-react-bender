{
  "name": "postcss-react-bender",
  "version": "0.1.0",
  "description": "PostCSS plugin to process react-bender styling features with scss-like syntax.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "react",
    "react-native",
    "scss",
    "jss",
    "css-in-js"
  ],
  "author": "Ömer Düzyol <omer@duzyol.net>",
  "license": "MIT",
  "repository": "omerduzyol/postcss-react-bender",
  "bugs": {
    "url": "https://github.com/omerduzyol/postcss-react-bender/issues"
  },
  "homepage": "https://github.com/omerduzyol/postcss-react-bender",
  "main": "index.cjs.js",
  "module": "index.es.mjs",
  "files": [
    "index.cjs.js",
    "index.cjs.js.map",
    "index.es.mjs",
    "index.es.mjs.map"
  ],
  "dependencies": {
    "css-to-react-native": "^2.2.2",
    "lodash": "^4.17.11",
    "postcss": "^6.0.16",
    "postcss-conditionals": "^2.1.0",
    "postcss-define-property": "^0.5.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.0",
    "postcss-nested-vars": "^1.0.0",
    "prop-types": "^15.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.7.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^22.4.2",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.14.3",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3"
  },
  "scripts": {
    "prepublishOnly": "yarn test",
    "lint:prettier-quite": "prettier 'lib/*.js' 'tests/*.js' --write",
    "lint:prettier": "yarn prettier-quite --list-different",
    "lint:js": "eslint tests/*.js lib/*.js --cache --ignore-path .gitignore --quiet",
    "lint": "yarn lint:js && yarn lint:prettier-quite",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:debug": "yarn pretest && node --inspect-brk node_modules/.bin/jest --runInBand",
    "rollup": "rollup -c .rollup.js --silent",
    "pretest": "yarn lint && yarn rollup"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  }
}
